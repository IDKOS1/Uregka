<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    android:background="@color/main"
    tools:context=".DetailViewActivity">


    <View
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topBar" />


    <ImageView
        android:id="@+id/top_logo"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/logotext"
        app:layout_constraintBottom_toBottomOf="@+id/topBar"
        app:layout_constraintEnd_toEndOf="@id/topBar"
        app:layout_constraintStart_toStartOf="@id/topBar"
        app:layout_constraintTop_toTopOf="@+id/topBar" />


    <ScrollView
        android:id="@+id/scrollr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_main"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/corners_15dp_radius"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/news"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--기자프로필-->
            <FrameLayout
                android:id="@+id/fl_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/textbox"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btn_name"
                    style="@style/UserName"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:text="@string/reporter_name" />

            </FrameLayout>


            <!--텍스트 박스-->
            <LinearLayout
                android:id="@+id/textbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/corners_15dp_radius"
                android:clipToOutline="true"
                android:elevation="4dp"

                android:orientation="vertical"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/img_main">

                <!--제목-->
                <TextView
                    android:id="@+id/tv_title"
                    style="@style/UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="안녕하세여"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!--날짜-->
                <TextView
                    android:id="@+id/tv_date"
                    style="@style/Sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="24-05-05"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!--본문-->
                <TextView
                    android:id="@+id/tv_maintext"
                    style="@style/Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="안녕하세여안녕하세여안녕하세여안녕하세여안녕하세여안녕하세여안녕하
                    세여안녕하세여안녕하세여안녕하세여안녕하세여안녕하세여안녕하세여안녕하세여안녕하세여
                    안녕하세여안녕하세여안녕하세여안녕하세여안녕하세여안녕하세여안녕하세여안녕하세여안녕 "
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
