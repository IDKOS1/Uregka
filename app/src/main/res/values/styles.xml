<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextView 스타일 정의 -->
    <style name="TitleText">
        <item name="android:textColor">@color/point</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Default">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="UserName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Message">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SignUpTest">
        <item name="android:textColor">@color/wrong</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Sub">
        <item name="android:textColor">@color/icon</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Circleimg">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigation">
        <item name="indicatorColor">#000000</item>
    </style>
</resources>